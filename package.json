{
    "name": "leo-app",
    "version": "1.0.0",
    "description": "Kombinierte Server- und Client-Anwendung für Leo",
    "license": "ISC",
    "author": "",
    "private": true,
    "type": "module",
    "main": "index.js",
    "scripts": {
      "dev:client": "vite",
      "build:client": "npm-run-all -p type-check:client \"build:client:only {@}\" --",
      "preview:client": "vite preview",
      "build:client:only": "vite build",
      "type-check:client": "vue-tsc --build",
      "start:server": "node index.js",
      "dev:server": "nodemon index.js",
      "test": "echo \"Error: Kein Test für das kombinierte Projekt spezifiziert\" && exit 1",
      "dev": "npm-run-all --parallel dev:client dev:server"
    },
    "dependencies": {
      "cors": "^2.8.5",
      "dotenv": "^16.5.0",
      "env": "^0.0.2",
      "express": "^5.1.0",
      "mariadb": "^3.4.2",
      "multer": "^1.4.5-lts.2",
      "uuid": "^11.1.0",
      "bootstrap": "^5.3.6",
      "pinia": "^3.0.1",
      "vue": "^3.5.13"
    },
    "devDependencies": {
      "@tsconfig/node22": "^22.0.1",
      "@types/node": "^22.14.0",
      "@vitejs/plugin-vue": "^5.2.3",
      "@vue/tsconfig": "^0.7.0",
      "autoprefixer": "^10.4.21",
      "npm-run-all2": "^7.0.2",
      "postcss": "^8.5.3",
      "tailwindcss": "^4.1.5",
      "typescript": "~5.8.0",
      "vite": "^6.2.4",
      "vite-plugin-vue-devtools": "^7.7.2",
      "vue-tsc": "^2.2.8",
      "ts-node": "^10.9.2",
      "nodemon": "^3.1.4"
    }
  }